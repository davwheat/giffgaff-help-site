{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
      {
        "source": "**/*.@(otf|ttf|ttc|woff|woff2|font.css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=604800, proxy-revalidate"
          }
        ]
      },
      {
        "source": "/img/**/*.@(svg|png|webp|jpg|jpeg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=2419200, proxy-revalidate"
          }
        ]
      },
      {
        "source": "**/static/**/*.*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=2419200, proxy-revalidate"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=1800, proxy-revalidate"
          }
        ]
      }
    ]
  }
}
